<% content_for :navbar_class, "navbar-wagon-white-fix" %>
<div class="container">
  <div class="container-booking">
    <h1>Vos messages</h1>
    <%= link_to "Retour", bookings_path%>
      <ul class="messages">
        <% @messages.each do |message| %>
          <% if message.booking == @booking %>
            <li class="message">
              <div class="message-pic">
                <% if message.user.avatar.present? %>
                  <%= cl_image_tag message.user.avatar, :transformation=>[{:gravity=>"face"}], class: "message-avatar" %>
                  <% else %>
                    <img src="https://www.systemealimentairequebec.info/sites/systemealimentairequebec.info/files/vignette_acteurs_locaux/avatar_neutre.png" class="message-avatar">
                <% end %>
              </div>
              <div class="message-user">
                <% if message.user == current_user %>
                  <p>Vous</p>
                <% else %>
                  <p><%= message.user.first_name %></p>
                <% end %>
              </div>
              <div class="message-content">
                <p>- <%=message.content %></p>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    <%= link_to "RÃ©pondre", new_booking_message_path(@booking), class:"btn btn-blue"%>
    </div>
  </div>
</div>

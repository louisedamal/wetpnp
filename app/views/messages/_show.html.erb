<% if message.booking == booking %>
  <% if message.user == current_user %>
    <li class="message-current-user">
      <div class="message-pic">
        <% if message.user.avatar.present? %>
          <%= cl_image_tag message.user.avatar, :transformation=>[{:gravity=>"face"}], class: "message-avatar" %>
        <% else %>
          <img src="https://www.systemealimentairequebec.info/sites/systemealimentairequebec.info/files/vignette_acteurs_locaux/avatar_neutre.png" class="message-avatar">
        <% end %>
      </div>
      <div class="message-user">
        <p>Vous</p>
      </div>
      <div class="message-content">
        <p> <%= message.content %></p>
      </div>
      <div class="message-date">
        <p><%= message.created_at.strftime("%b %e, %l:%M %p") %></p>
      </div>
    </li>
  <% else %>
    <li class="message">
      <div class="message-pic">
        <% if message.user.avatar.present? %>
          <%= cl_image_tag message.user.avatar, :transformation=>[{:gravity=>"face"}], class: "message-avatar" %>
        <% else %>
          <img src="https://www.systemealimentairequebec.info/sites/systemealimentairequebec.info/files/vignette_acteurs_locaux/avatar_neutre.png" class="message-avatar">
        <% end %>
      </div>
      <div class="message-user">
        <p><%= message.user.first_name %></p>
      </div>
      <div class="message-content">
        <p>- <%=message.content %></p>
      </div>
      <div class="message-date">
        <p><%= message.created_at.strftime("%b %e, %l:%M %p") %></p>
      </div>
    </li>
  <% end %>
<% end %>

<% content_for :navbar_class, "navbar-wagon-white-fix" %>
<div class="home-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 40%, rgba(0,36,61,0.6) 100%), url(<%= cl_image_path(@pool.photo)%> );">
  <div class="banner-title">
    <h1><%= @pool.title %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-7">
      <div class="global-card">
        <div class="card-pool card-pool-left">
          <h3>Description:</h3>
          <h5>"<%= @pool.description %>"</h5>
          <p>Adresse:
          <br>
          <%= @pool.address %></p>
          <p>Prix /personne:
            <%= @pool.price %> €</p>
          <p>Capacité d'accueil:
          <br>
          <%= @pool.capacity %> personnes</p>

          <div class="card-icons">
            <%= link_to "Back", pools_path %>
            <%= link_to "Edit", edit_pool_path(@pool) %>
            <%= link_to "Delete", pool_path(@pool), method: :delete %>
          </div>
      </div>


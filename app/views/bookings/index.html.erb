<% content_for :navbar_class, "navbar-wagon-white-fix" %>
<div class="container">
  <div class="container-booking">
    <h1>Mes réservations en cours et à venir</h1>
    <div class="tabs">
      <a href="#" class="tab active">En tant que swimmer</a>
      <a href="#" class="tab">En tant que propriétaire</a>
    </div>
    <ul class="bookings">
      <% @bookings.each do |booking| %>
        <li class="booking">
          <div class="booking-title">
            <h4><%= link_to "#{booking.pool.title}", booking_path(booking) %></h4>
          </div>
          <div class="booking-date">
            <p><%= booking.date %></p>
          </div>
          <div class="booking-date">
            <p><%= booking.pool.price %> €</p>
          </div>
          <div class="booking-delete">
            <%= link_to "Annuler", booking_path(booking), method: :delete, data: {confirm: "Êtes-vous sûr ?"} %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
